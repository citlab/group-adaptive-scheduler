<?xml version="1.0" ?>
<jobs>
    <job name="wordcount">
        <runner>
            <name>flink</name>
            <arguments>
                <argument name="executors">6</argument>
                <argument name="class">org.apache.spark.examples.JavaWordCount</argument>
            </arguments>
        </runner>
        <jar>
            <path>/home/ubuntu/spark/examples/jars/spark-examples_2.11-2.3.2.jar</path>
            <arguments>
                <argument>hdfs:///user/ubuntu/shakespeare.txt</argument>
            </arguments>
        </jar>
    </job>
</jobs>